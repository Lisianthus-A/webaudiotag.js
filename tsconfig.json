{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "declaration": true,
        "declarationDir": "dist",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "strict": true,
        "emitDeclarationOnly": true
    },
    "exclude": [
        "node_modules",
        "./dist/**/*"
    ],
    "include": [
        "./index.ts",
        "./eventBus.ts"
    ]
}